<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <TextView
        android:id="@+id/textViewOtMachineNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Equipo"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/textViewOtDescripciónNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/textViewOtGeneratedByNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Generada por"
        android:textSize="9dp" />

    <TextView
        android:id="@+id/textViewOtUsuarioNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Asignada a"
        android:textSize="9dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewOtPrioridadNew"
            android:text="Prioridad"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:hint="Prioridad"
            android:textSize="8dp"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/textViewOtTipoNew"
            android:text="Tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:hint="Tipo"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/textViewOtStateNew"
            android:text="Estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:hint="Estado"
            android:textSize="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewOtDateNew"
            android:text="Creada el"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:hint="Creada el"
            android:textSize="8dp"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/textViewOtDateAsignNew"
            android:text="Asignada el"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:hint="Asignada el"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/textViewOtDateFinalNew"
            android:text="Finalizada el"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:hint="Finalizada el"
            android:textSize="8dp" />

    </LinearLayout>

</LinearLayout>